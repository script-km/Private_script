-- ==============================
-- CLICK TO LOAD SCRIPT LOADER
-- ==============================

print("üîπ Click here to load the script!")

-- Makikinig sa input (mouse click)
local UserInputService = game:GetService("UserInputService")
local clicked = false

UserInputService.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        if clicked then return end -- Iwas double-click
        clicked = true
        print("üîπ Loading script...")
        
        -- I-load ang tunay na script mula sa GitHub
        local success, err = pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/script-km/Private_script/refs/heads/main/Private_script"))()
        end)
        
        if success then
            print("‚úÖ Script loaded successfully!")
        else
            warn("‚ùå Failed to load script: "..err)
        end
    end
end)
